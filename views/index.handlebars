    {{!-- <h1>Eat That Burger</h1> --}}
  </div>
</div>

<div class="container mt-2">
  <div class="row">
    <div class="col mr-2 bg-light border border-solid border-warning border-med rounded">
      <h2>Burgers not devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
      
    </div>
    <div class="col ml-2 bg-light border border-solid border-warning border-med rounded">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/devoured-burger-block }}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

